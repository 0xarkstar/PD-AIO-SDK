{
  "name": "pd-aio-sdk",
  "version": "0.2.0",
  "description": "PD AIO SDK - Unified TypeScript SDK for 13 decentralized perpetual exchanges (Hyperliquid, GRVT, Paradex, EdgeX, Backpack, Lighter, Nado, Variational, Extended, dYdX v4, GMX v2, Drift, Jupiter)",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xarkstar/PD-AIO-SDK.git"
  },
  "bugs": {
    "url": "https://github.com/0xarkstar/PD-AIO-SDK/issues"
  },
  "homepage": "https://github.com/0xarkstar/PD-AIO-SDK#readme",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": {
    "ws": "./dist/browser/ws-browser.js",
    "crypto": false,
    "./dist/adapters/lighter/signer/LighterSigner.js": "./dist/adapters/lighter/signer/LighterWasmSigner.js",
    "./dist/monitoring/metrics-server.js": false
  },
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:contracts": "jest tests/api-contracts",
    "test:production": "npm run test:production:basic && npm run test:production:websocket && npm run test:production:stress",
    "test:production:basic": "tsx tests/production/basic-flow.test.ts",
    "test:production:websocket": "tsx tests/production/websocket-stability.test.ts",
    "test:production:stress": "tsx tests/production/stress-test.ts",
    "check:api": "tsx scripts/check-api-compatibility.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:serve": "typedoc && npx http-server docs/api -p 8080",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "pd-aio-sdk",
    "perp-dex",
    "all-in-one",
    "perpetual",
    "dex",
    "hyperliquid",
    "lighter",
    "grvt",
    "paradex",
    "edgex",
    "backpack",
    "nado",
    "variational",
    "extended",
    "dydx",
    "gmx",
    "drift",
    "jupiter",
    "solana",
    "arbitrum",
    "trading",
    "crypto",
    "defi",
    "sdk",
    "unified-api",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@drift-labs/sdk": "^2.155.0",
    "@grvt/client": "^1.6.11",
    "@noble/ed25519": "^3.0.0",
    "@oraichain/lighter-ts-sdk": "^1.1.5",
    "@paradex/sdk": "^0.7.0",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "eventemitter3": "^5.0.1",
    "js-sha3": "^0.9.3",
    "prom-client": "^15.1.3",
    "starknet": "^8.9.1",
    "ws": "^8.18.0",
    "zod": "^3.23.0"
  },
  "optionalDependencies": {
    "koffi": "^2.14.1"
  },
  "devDependencies": {
    "@types/hapi__shot": "^4.1.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.26.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
