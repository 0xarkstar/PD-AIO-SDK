{
  "name": "perp-dex-sdk",
  "version": "0.1.0",
  "description": "Unified TypeScript SDK for decentralized perpetual exchanges (Hyperliquid, Lighter, GRVT, Paradex, EdgeX, Backpack)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:serve": "typedoc && npx http-server docs/api -p 8080",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "perpetual",
    "dex",
    "hyperliquid",
    "lighter",
    "grvt",
    "paradex",
    "edgex",
    "backpack",
    "trading",
    "crypto",
    "defi",
    "sdk"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.13.0",
    "ws": "^8.18.0",
    "zod": "^3.23.0",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.0",
    "typedoc": "^0.26.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
