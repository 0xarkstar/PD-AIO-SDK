{
  "name": "pd-aio-sdk",
  "version": "0.2.0",
  "description": "PD AIO SDK - Unified TypeScript SDK for 16 decentralized perpetual exchanges (Hyperliquid, GRVT, Paradex, EdgeX, Backpack, Lighter, Nado, Variational, Extended, dYdX v4, Jupiter, Drift, GMX v2, Aster, Pacifica, Ostium)",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xarkstar/PD-AIO-SDK.git"
  },
  "bugs": {
    "url": "https://github.com/0xarkstar/PD-AIO-SDK/issues"
  },
  "homepage": "https://github.com/0xarkstar/PD-AIO-SDK#readme",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": {
    "ws": "./dist/browser/ws-browser.js",
    "crypto": false,
    "./dist/adapters/lighter/signer/LighterSigner.js": "./dist/adapters/lighter/signer/LighterWasmSigner.js",
    "./dist/monitoring/metrics-server.js": false
  },
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./hyperliquid": {
      "import": "./dist/adapters/hyperliquid/index.js",
      "types": "./dist/adapters/hyperliquid/index.d.ts"
    },
    "./lighter": {
      "import": "./dist/adapters/lighter/index.js",
      "types": "./dist/adapters/lighter/index.d.ts"
    },
    "./grvt": {
      "import": "./dist/adapters/grvt/index.js",
      "types": "./dist/adapters/grvt/index.d.ts"
    },
    "./paradex": {
      "import": "./dist/adapters/paradex/index.js",
      "types": "./dist/adapters/paradex/index.d.ts"
    },
    "./edgex": {
      "import": "./dist/adapters/edgex/index.js",
      "types": "./dist/adapters/edgex/index.d.ts"
    },
    "./backpack": {
      "import": "./dist/adapters/backpack/index.js",
      "types": "./dist/adapters/backpack/index.d.ts"
    },
    "./nado": {
      "import": "./dist/adapters/nado/index.js",
      "types": "./dist/adapters/nado/index.d.ts"
    },
    "./variational": {
      "import": "./dist/adapters/variational/index.js",
      "types": "./dist/adapters/variational/index.d.ts"
    },
    "./extended": {
      "import": "./dist/adapters/extended/index.js",
      "types": "./dist/adapters/extended/index.d.ts"
    },
    "./dydx": {
      "import": "./dist/adapters/dydx/index.js",
      "types": "./dist/adapters/dydx/index.d.ts"
    },
    "./jupiter": {
      "import": "./dist/adapters/jupiter/index.js",
      "types": "./dist/adapters/jupiter/index.d.ts"
    },
    "./drift": {
      "import": "./dist/adapters/drift/index.js",
      "types": "./dist/adapters/drift/index.d.ts"
    },
    "./gmx": {
      "import": "./dist/adapters/gmx/index.js",
      "types": "./dist/adapters/gmx/index.d.ts"
    },
    "./aster": {
      "import": "./dist/adapters/aster/index.js",
      "types": "./dist/adapters/aster/index.d.ts"
    },
    "./pacifica": {
      "import": "./dist/adapters/pacifica/index.js",
      "types": "./dist/adapters/pacifica/index.d.ts"
    },
    "./ostium": {
      "import": "./dist/adapters/ostium/index.js",
      "types": "./dist/adapters/ostium/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc && npm run build:cjs",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.cjs --external:ws --external:ethers --external:starknet --external:@drift-labs/sdk --external:@grvt/client --external:@paradex/sdk --external:@solana/web3.js --external:koffi --external:prom-client --external:@oraichain/lighter-ts-sdk",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:contracts": "jest tests/api-contracts",
    "test:production": "npm run test:production:basic && npm run test:production:websocket && npm run test:production:stress",
    "test:production:basic": "tsx tests/production/basic-flow.test.ts",
    "test:production:websocket": "tsx tests/production/websocket-stability.test.ts",
    "test:production:stress": "tsx tests/production/stress-test.ts",
    "check:api": "tsx scripts/check-api-compatibility.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:serve": "typedoc && npx http-server docs/api -p 8080",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "pd-aio-sdk",
    "perp-dex",
    "all-in-one",
    "perpetual",
    "dex",
    "hyperliquid",
    "lighter",
    "grvt",
    "paradex",
    "edgex",
    "backpack",
    "nado",
    "variational",
    "extended",
    "dydx",
    "gmx",
    "drift",
    "jupiter",
    "aster",
    "pacifica",
    "ostium",
    "solana",
    "arbitrum",
    "web3",
    "ethereum",
    "starknet",
    "perpetual-futures",
    "trading-sdk",
    "trading",
    "crypto",
    "defi",
    "sdk",
    "unified-api",
    "typescript"
  ],
  "author": "0xarkstar",
  "license": "MIT",
  "dependencies": {
    "@drift-labs/sdk": "^2.156.0",
    "@grvt/client": "^1.6.11",
    "@noble/ed25519": "^3.0.0",
    "@oraichain/lighter-ts-sdk": "^1.1.5",
    "@paradex/sdk": "^0.7.0",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "eventemitter3": "^5.0.1",
    "js-sha3": "^0.9.3",
    "prom-client": "^15.1.3",
    "starknet": "^8.9.1",
    "ws": "^8.18.0",
    "zod": "^3.23.0"
  },
  "optionalDependencies": {
    "koffi": "^2.14.1"
  },
  "devDependencies": {
    "@types/hapi__shot": "^4.1.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.26.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "nanoid": "^3.3.8"
  }
}
