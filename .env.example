# ============================================================================
# Perp DEX SDK - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control!
#
# Naming Convention: {EXCHANGE}_{CREDENTIAL_TYPE}
# - PRIVATE_KEY: EVM/Ethereum private key (EIP-712 signing)
# - STARK_PRIVATE_KEY: StarkNet/StarkEx private key (Pedersen hash)
# - API_KEY: API authentication key
# - API_SECRET: API signing secret (HMAC)

# ============================================================================
# Hyperliquid - EIP-712 Signature
# ============================================================================
# Required: EIP-712 compatible private key (64 hex characters, with or without 0x prefix)
HYPERLIQUID_PRIVATE_KEY=0x...

# Optional: Use testnet (default: false)
HYPERLIQUID_TESTNET=true

# Optional: Custom RPC URL for L1 operations
# HYPERLIQUID_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# Optional: Vault address for vault trading
# HYPERLIQUID_VAULT_ADDRESS=0x...

# ============================================================================
# Lighter - HMAC-SHA256 Signature
# ============================================================================
# Required: API credentials from Lighter platform
LIGHTER_API_KEY=your_api_key
LIGHTER_API_SECRET=your_api_secret

# Optional: Use testnet (default: false)
LIGHTER_TESTNET=true

# ============================================================================
# EdgeX - StarkEx L2 Signature (Pedersen Hash + ECDSA)
# ============================================================================
# Required: StarkEx L2 private key (NOT Ethereum private key!)
# This is used for Pedersen hash + ECDSA signing
EDGEX_STARK_PRIVATE_KEY=0x...

# Optional: Use testnet (default: false)
EDGEX_TESTNET=true

# ============================================================================
# Nado - EIP-712 Signature (Ink L2)
# ============================================================================
# Required: EVM private key (for Ink L2 network)
NADO_PRIVATE_KEY=0x...

# Optional: Use testnet (default: false)
NADO_TESTNET=true

# ============================================================================
# Extended - API Key + Optional StarkNet Signing
# ============================================================================
# Required: API key for trading and account access
EXTENDED_API_KEY=your_api_key

# Optional: StarkNet credentials for on-chain transactions
# EXTENDED_STARKNET_PRIVATE_KEY=0x...
# EXTENDED_STARKNET_ACCOUNT_ADDRESS=0x...

# Optional: Use testnet (default: false)
EXTENDED_TESTNET=true

# ============================================================================
# Variational - HMAC-SHA256 (API in Development)
# ============================================================================
# Note: Variational API is still under development
VARIATIONAL_API_KEY=your_api_key
VARIATIONAL_API_SECRET=your_api_secret

# Optional: Use testnet (default: false)
VARIATIONAL_TESTNET=true

# ============================================================================
# GRVT Configuration
# ============================================================================
# Required: EIP-712 compatible private key
GRVT_PRIVATE_KEY=0x...

# Required: API key from GRVT dashboard
GRVT_API_KEY=your_api_key

# Optional: Use testnet (default: false)
GRVT_TESTNET=true

# Optional: Trading account ID (if using sub-accounts)
# GRVT_TRADING_ACCOUNT_ID=your_trading_account_id

# ============================================================================
# Paradex Configuration
# ============================================================================
# Required: StarkNet private key (NOT Ethereum private key!)
PARADEX_STARK_PRIVATE_KEY=0x...

# Optional: Use testnet (default: false)
PARADEX_TESTNET=true

# ============================================================================
# Backpack Configuration
# ============================================================================
# Required: ED25519 API credentials (NOT secp256k1!)
BACKPACK_API_KEY=your_api_key
BACKPACK_SECRET_KEY=your_ed25519_secret_key

# Optional: Use testnet (default: false)
BACKPACK_TESTNET=true

# ============================================================================
# General Configuration
# ============================================================================
# Enable debug logging (default: false)
DEBUG=false

# Request timeout in milliseconds (default: 30000)
REQUEST_TIMEOUT=30000

# ============================================================================
# Security Notes
# ============================================================================
# 1. NEVER commit .env file to git
# 2. Keep private keys secure and never share them
# 3. Use testnet for development and testing
# 4. Rotate API keys regularly
# 5. Use environment-specific .env files (.env.development, .env.production)
# 6. Consider using secrets management tools in production (AWS Secrets Manager, etc.)

# ============================================================================
# Getting Credentials
# ============================================================================
# Hyperliquid: Export from MetaMask or generate new wallet
# Lighter: Register at lighter.xyz and create API key + secret
# EdgeX: Register at edgex.exchange and get StarkEx L2 private key
# Nado: Export from MetaMask or generate new wallet for Ink L2
# Extended: Register at extended.exchange and generate API key
# Variational: Register at variational.io and create API credentials
# GRVT: Register at grvt.io and generate API key + use ETH wallet
# Paradex: Generate StarkNet key from StarkNet wallet
# Backpack: Register at backpack.exchange and create ED25519 API key

