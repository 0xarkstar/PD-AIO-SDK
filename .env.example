# ============================================================================
# Perp DEX SDK - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control!

# ============================================================================
# Hyperliquid Configuration
# ============================================================================
# Required: EIP-712 compatible private key (64 hex characters without 0x prefix or with it)
HYPERLIQUID_PRIVATE_KEY=your_private_key_here

# Optional: Use testnet (default: false)
HYPERLIQUID_TESTNET=true

# Optional: Custom RPC URL for L1 operations (default: mainnet RPC)
# HYPERLIQUID_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# Optional: Vault address for vault trading
# HYPERLIQUID_VAULT_ADDRESS=0x...

# ============================================================================
# Lighter Configuration
# ============================================================================
# Required: API credentials from Lighter platform
LIGHTER_API_KEY=your_api_key_here
LIGHTER_API_SECRET=your_api_secret_here

# Required: Your account ID
LIGHTER_ACCOUNT_ID=your_account_id_here

# Optional: API key expiration (seconds, default: 3600)
# LIGHTER_KEY_EXPIRATION=3600

# ============================================================================
# GRVT Configuration
# ============================================================================
# Required: EIP-712 compatible private key
GRVT_PRIVATE_KEY=your_private_key_here

# Required: API key from GRVT dashboard
GRVT_API_KEY=your_api_key_here

# Optional: Use testnet (default: false)
GRVT_TESTNET=true

# Optional: Trading account ID (if using sub-accounts)
# GRVT_TRADING_ACCOUNT_ID=your_trading_account_id

# ============================================================================
# Paradex Configuration
# ============================================================================
# Required: StarkNet private key (NOT Ethereum private key!)
PARADEX_PRIVATE_KEY=your_starknet_private_key_here

# Required: L1 Ethereum RPC for authentication
PARADEX_L1_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# Optional: Use testnet (default: false)
PARADEX_TESTNET=true

# Optional: JWT token refresh interval (ms, default: 240000 = 4 min)
# PARADEX_TOKEN_REFRESH_INTERVAL=240000

# ============================================================================
# EdgeX Configuration
# ============================================================================
# Required: Ethereum private key (for ECDSA signing)
EDGEX_PRIVATE_KEY=your_ethereum_private_key_here

# Required: StarkEx private key (for Pedersen hash, different from ETH key!)
EDGEX_STARK_PRIVATE_KEY=your_stark_private_key_here

# Optional: Use testnet (default: false)
EDGEX_TESTNET=true

# Optional: StarkEx account ID
# EDGEX_ACCOUNT_ID=your_account_id

# ============================================================================
# Backpack Configuration
# ============================================================================
# Required: ED25519 API credentials (NOT secp256k1!)
BACKPACK_API_KEY=your_api_key_here
BACKPACK_SECRET_KEY=your_ed25519_secret_key_here

# Optional: Use testnet (default: false)
BACKPACK_TESTNET=true

# ============================================================================
# Nado Configuration
# ============================================================================
# Required: EIP-712 compatible private key (for Ink L2)
NADO_PRIVATE_KEY=your_private_key_here

# Optional: Use testnet (default: false)
NADO_TESTNET=true

# ============================================================================
# General Configuration
# ============================================================================
# Enable debug logging (default: false)
DEBUG=false

# Request timeout in milliseconds (default: 30000)
REQUEST_TIMEOUT=30000

# ============================================================================
# Security Notes
# ============================================================================
# 1. NEVER commit .env file to git
# 2. Keep private keys secure and never share them
# 3. Use testnet for development and testing
# 4. Rotate API keys regularly
# 5. Use environment-specific .env files (.env.development, .env.production)
# 6. Consider using secrets management tools in production (AWS Secrets Manager, etc.)

# ============================================================================
# Getting Credentials
# ============================================================================
# Hyperliquid: Export from MetaMask or generate new wallet
# Lighter: Register at lighter.xyz and create API key
# GRVT: Register at grvt.io and generate API key + use ETH wallet
# Paradex: Generate StarkNet key from StarkNet wallet
# EdgeX: Register at edgex.exchange and get both ETH + StarkEx keys
# Backpack: Register at backpack.exchange and create ED25519 API key
# Nado: Export from MetaMask or generate new wallet for Ink L2

