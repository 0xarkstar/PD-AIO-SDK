              "legend": false
            },
            "lineInterpolation": "stepAfter",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "always",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "color": "green",
                  "text": "CLOSED"
                },
                "1": {
                  "color": "red",
                  "text": "OPEN"
                },
                "2": {
                  "color": "yellow",
                  "text": "HALF_OPEN"
                }
              },
              "type": "value"
            }
          ],
